<div class="welcome">
<% if user_signed_in? %>
  <%= current_user.email %> is logged in. If user is NOT you,
  click <%= link_to "Sign Out", destroy_user_session_path %>
<% else %>
  <%= link_to "Register", new_user_registration_path %> or
  <%= link_to "Sign In", new_user_session_path %>
<% end %>
</div>

<h1>Listing addresses</h1>

<table>
  <tr>
    <thead>
    <th>ชื่อ</th>
    <th>นามสกุล</th>
    <th>โทรศัพท์</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
    </thead>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.fname %></td>
    <td><%= address.lname %></td>
    <td><%= address.phone %></td>
    <td><%= address.email %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

